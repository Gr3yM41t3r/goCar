<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiant"
    tools:context=".Fragments.AddAdvertFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center"
            android:text="Ajouter votre annonce"
            android:textSize="40dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:singleLine="true"
            android:maxLength="50"

            android:hint="titre"
            android:paddingStart="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/brand"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:singleLine="true"
                android:maxLength="20"
                android:hint="marque"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/model"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:ellipsize="start"
                android:maxLength="20"

                android:hint="model"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/vehiculetype"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:entries="@array/vehicule_type" />

            <EditText
                android:id="@+id/odometer"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:singleLine="true"
                android:maxLength="10"
                android:inputType="number"
                android:hint="kilometrage"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/fuel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:entries="@array/fuel"
                />

            <EditText
                android:id="@+id/color"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:singleLine="true"
                android:maxLength="10"


                android:hint="couleur"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/gearbox"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:entries="@array/gearbox"
                />

            <EditText
                android:id="@+id/codePostal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:singleLine="true"
                android:maxLength="30"
                android:inputType="number"

                android:hint="@string/code_postal"
                android:paddingStart="10dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/startservice"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:text="mise en service"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/yearmode"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:inputType="number"
                android:ellipsize="start"
                android:maxLength="4"

                android:hint="années du modèle"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/fiscalPower"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="5"


                android:hint="puissance fiscal"
                android:paddingStart="20dp" />

            <EditText
                android:id="@+id/dinPower"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="5"

                android:hint="puissance dynamique"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="10"

                android:hint="Prix"
                android:paddingStart="20dp" />

            <Spinner
                android:id="@+id/adverttype"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_input"

                android:entries="@array/advert_type" />

        </LinearLayout>


        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Description"
            android:paddingStart="20dp" />






            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>


            </HorizontalScrollView>



        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/addPhotoButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#C49CE3"
       >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_add_108" />


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:background="#D268448C"
            android:ems="10"
            android:elevation="10dp"

            android:hint="Confirmer" />


    </LinearLayout>


</ScrollView>