<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_ui_2a"
    tools:context=".LoginActivity">


        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="470dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="220dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_gray_36"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:gravity="center"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom__input"
                    android:ellipsize="start"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:textColorHint="@color/lightGray40"
                    android:singleLine="true"
                    >
                </EditText>

                <EditText
                    android:gravity="center"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom__input"
                    android:ellipsize="start"
                    android:hint="@string/mot_de_passe"
                    android:inputType="textPassword"
                    android:textColorHint="@color/lightGray40"
                    android:singleLine="true"
                    >
                </EditText>

                <Button
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/custom_button_orange"
                    android:textColor="@color/white"
                    android:text="@string/se_connecter"
                    >
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>





</LinearLayout>